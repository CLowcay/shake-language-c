rtsopts="+RTS -N -RTS"

cabal_dev=`which cabal-dev`
if [ -z "$cabal_dev" ]; then
    cabal_dev="$HOME/.cabal/bin/cabal-dev"
fi

if [ ! -x "$cabal_dev" ]; then
    echo "`basename $0`: cabal-dev executable not found"
    exit 1
fi

function shakeit()
{
    ./cabal-dev/bin/shakefile $rtsopts "$@"
}

function shakeit_with_errors()
{
    shakeit "$@" 2>&1 | tee errors.err
    return ${PIPESTATUS[0]}
}

case $1 in
    update) shift ; "$cabal_dev" install "$@" ;;
    *) shakeit "$@" ;;
esac
